<div>
  <h1 class="text-center">Meetings</h1>
  <div class="alert alert-info" role="alert">
    click on a meeting to see it's records
  </div>
</div>
<br>
<table class="table table-hover">
  <thead>
    <tr>
      <th scope="col">ID</th>
      <th scope="col">Name</th>
    </tr>
  </thead>
  <tbody>
    <% @meetings.each do |meeting| %>
      <tr>
        <th scope="row"><%= meeting.id %></th>
        <td><%=  link_to meeting.name, meeting_path(meeting.id)  %></td>
      </tr>
    <% end %>
  </tbody>
</table>